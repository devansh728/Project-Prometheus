{
    "project": "EV Telematics Anomaly & Failure Prediction",
    "version": "1.0.0",
    "data_generation": {
        "num_vehicles": 10,
        "duration_days_per_vehicle": 7,
        "sampling_sec": 1,
        "aggregate_window_sec": 60
    },
    "vehicle_profiles": [
        {
            "vehicle_id": "EV_001",
